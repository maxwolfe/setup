# Executes commands at the start of an interactive session.
#
# Authors:
#   Sorin Ionescu <sorin.ionescu@gmail.com>
#

# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
	source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi


# Constants
export EDITOR=$(which vim)
export VISUAL=$(which vim)
# Add Ruby to path
export PATH="$PATH:$HOME/.rbenv/versions/2.4.6/bin/"

# Tmuxinator
source ~/.bin/tmuxinator.zsh

# Syntax Highlighting
source ~/.zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# Powerline
## 3.6 = Current Version
if [[ -r /usr/local/lib/python3.6/dist-packages/powerline/bindings/zsh/powerline.zsh ]]; then
	source /usr/local/lib/python3.6/dist-packages/powerline/bindings/zsh/powerline.zsh
fi

# fg with ^Z
_zsh_cli_fg() { fg; }
zle -N _zsh_cli_fg
bindkey '^Z' _zsh_cli_fg

# Launch Main Tmuxinator Session on Start
if [ "$TMUX" = "" ]; then mux start main; fi

# Aliases
taskmax () {
	"$HOME/.taskmax/task-max"
}
